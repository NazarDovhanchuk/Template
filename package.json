    "concurrently": "^5.2.0",
    "eslint": "^7.5.0",
    "eslint-plugin-jest": "^23.19.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": {
      "hooks": {
        "pre-commit": "npm run lint",
        "pre-push": "npm test"
      }
    },
    "jest": "^26.1.0",
    "node-sass": "^4.14.1",
